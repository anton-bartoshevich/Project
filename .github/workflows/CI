name: CI

on:
  push:
    branches: [ "main" ]

  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checks-out the repository
        uses: actions/checkout@v3
        with:
          fetch-depth: '0'
          
      - name: Bump version and push tag
        id: tag_version
        uses: mathieudutour/github-tag-action@v6.1
        with:
          github_token: ${{ secrets.GH_TOKEN }}

      - name: Login to Docker Hub
        uses: docker/login-action@v2
        with:
          username: ${{ secrets.DOCKER_HUB_USER }}
          password: ${{ secrets.DOCKER_HUB_TOKEN }}

      - name: Build and push
        uses: docker/build-push-action@v2
        with:
          context: ./Docker
          push: true
          tags: caymankey/wordpress:${{ steps.tag_version.outputs.new_tag }}
          
      - name: Helm tool
        uses: Azure/setup-helm@v3
        env:
          GITHUB_TOKEN: ${{ secrets.GH_TOKEN }}
          
#      - name: Test manifests
#        continue-on-error: true
#        uses: instrumenta/kubeval-action@master
#        with: 
#          files: ./my_project/templates
          
      - name: Publish Helm charts
        uses: stefanprodan/helm-gh-pages@master
        with:
          charts_dir: ./Helm/Helm-releases/
          branch: main
          linting: off
# Переписать Helm
          charts_url: https://.github.io/my_project/
          token: ${{ secrets.GH_TOKEN }}
          app_version: ${{ steps.tag_version.outputs.new_tag }}
          chart_version: ${{ steps.tag_version.outputs.new_tag }}
          
      - name: Slack Notification
        uses: rtCamp/action-slack-notify@v2
        env:
          SLACK_CHANNEL: my-projectnew
          SLACK_COLOR: ${{ job.status }}
          SLACK_ICON: https://avatars.githubusercontent.com/u/43742164?s=32&v=4
          SLACK_MESSAGE: 'A new version of the project has been released'
          SLACK_TITLE: 'Good!'
          SLACK_USERNAME: agent
          SLACK_WEBHOOK: ${{ secrets.SLACK_WEBHOOK }}
